<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_nav"
    app:startDestination="@id/anasayfaFragment">

    <fragment
        android:id="@+id/anasayfaFragment"
        android:name="com.example.odev6.ui.fragment.AnasayfaFragment"
        android:label="fragment_anasayfa"
        tools:layout="@layout/fragment_anasayfa" >
        <action
            android:id="@+id/icerikGecis"
            app:destination="@id/icerikFragment" />
    </fragment>
    <fragment
        android:id="@+id/icerikFragment"
        android:name="com.example.odev6.ui.fragment.IcerikFragment"
        android:label="fragment_icerik"
        tools:layout="@layout/fragment_icerik" >
        <action
            android:id="@+id/kampanyalarGecis"
            app:destination="@id/kampanyalarFragment" />
        <action
            android:id="@+id/siparislerGecis"
            app:destination="@id/siparislerFragment" />
        <action
            android:id="@+id/sepetGecis"
            app:destination="@id/sepetFragment" />
        <action
            android:id="@+id/kesfetGecis"
            app:destination="@id/kesfetFragment" />
    </fragment>
    <fragment
        android:id="@+id/kampanyalarFragment"
        android:name="com.example.odev6.ui.fragment.KampanyalarFragment"
        android:label="fragment_kampanyalar"
        tools:layout="@layout/fragment_kampanyalar" />
    <fragment
        android:id="@+id/kesfetFragment"
        android:name="com.example.odev6.ui.fragment.KesfetFragment"
        android:label="fragment_kesfet"
        tools:layout="@layout/fragment_kesfet" />
    <fragment
        android:id="@+id/sepetFragment"
        android:name="com.example.odev6.ui.fragment.SepetFragment"
        android:label="fragment_sepet"
        tools:layout="@layout/fragment_sepet" />
    <fragment
        android:id="@+id/siparislerFragment"
        android:name="com.example.odev6.ui.fragment.SiparislerFragment"
        android:label="fragment_siparisler"
        tools:layout="@layout/fragment_siparisler" />
</navigation>